{
  "name": "moonbeam-main",
  "version": "1.0.0",
  "description": "This is the main repository for the Moonbeam mobile application.",
  "repository": "https://codecatalyst.aws/spaces/Moonbeam/projects/MoonbeamApp/source-repositories/moonbeam-main/",
  "author": "Marius Acsinte <marius@moonbeam.vet>",
  "license": "Moonbeam Inc. Proprietary Code License <https://github.com/moonnbm/moonbeam-main/blob/main/LICENSE>",
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local && lerna link --force-local",
    "build": "lerna run build --stream --include-dependencies",
    "clean": "lerna run clean && rm -rf ./node_modules",
    "postinstall": "husky install",
    "release": "f() { if [ -d \"node_modules/lerna\" ]; then yarn run clean && yarn run bootstrap && yarn run build; else yarn run bootstrap && yarn run build; fi; }; f"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "^15.1.1",
    "husky": "^8.0.3",
    "lerna": "latest",
    "nx": "15.8.1",
    "typescript": "^4.9.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/moonbeam-app",
      "**/moonbeam-app/**",
      "**/moonbeam-models",
      "**/moonbeam-models/**"
    ]
  },
  "private": true
}
