{
  "name": "moonbeam-main",
  "version": "1.0.0",
  "description": "This is the main repository for the Moonbeam mobile application.",
  "repository": "https://codecatalyst.aws/spaces/Moonbeam/projects/MoonbeamApp/source-repositories/moonbeam-main/",
  "author": "Marius Acsinte <marius@moonbeam.vet>",
  "license": "Moonbeam Inc. Proprietary Code License <https://codecatalyst.aws/spaces/Moonbeam/projects/MoonbeamApp/source-repositories/moonbeam-main/commits/refs/heads/main/--/LICENSE/browse>",
  "scripts": {
    "build": "touch ./packages/getmoonbeam-cdk/graphql/schema.graphql && lerna run build --stream --include-dependencies",
    "clean": "lerna run clean && rm -rf ./node_modules",
    "postinstall": "husky install",
    "release": "yarn run clean && yarn install && yarn run build"
  },
  "devDependencies": {
    "nx": "^16.6.0",
    "patch-package": "^8.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.5",
    "typescript": "^4.9.4"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/getmoonbeam-app",
      "**/getmoonbeam-app/**",
      "**/moonbeam-models",
      "**/moonbeam-models/**"
    ]
  },
  "private": true
}
